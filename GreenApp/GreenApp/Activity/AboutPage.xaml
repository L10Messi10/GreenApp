<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenApp.Activity.AboutPage"
             Title="About">
    <StackLayout>
        <StackLayout HorizontalOptions="Fill"  BackgroundColor="{StaticResource Primary}" 
                     HeightRequest="200" VerticalOptions="Start" Padding="20">
            <Image Source="logoflyout" HeightRequest="100"/>
            <Label Grid.Column="0" Grid.ColumnSpan="2" VerticalOptions="Center"
                   HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Green" FontSize="40" FontFamily="TitleDesign" FontAttributes="Bold"
                              TextColor="{StaticResource Textcolor}" />
                        <Span Text=" Market" FontSize="25" FontFamily="TitleFontLight"
                              TextColor="{StaticResource Textcolor}" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
        <StackLayout Margin="20">
            <Label
                Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras sit amet leo ut justo sagittis iaculis. Maecenas ac erat euismod, posuere nibh sit amet, mollis ligula. Mauris cursus facilisis erat, nec rhoncus est. Cras vel ante hendrerit." 
                TextColor="Black"/>
        </StackLayout>
    </StackLayout>
</ContentPage>