<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenApp.Activity.NoInternetPage" BackgroundColor="{StaticResource Primary}">
    
        <StackLayout>
            <Frame Padding="0" VerticalOptions="FillAndExpand" BackgroundColor="#FFFFFF"
                   Margin="0,-180,0,100" CornerRadius="180" HasShadow="True">
                <StackLayout VerticalOptions="CenterAndExpand" Margin="0,180,0,0">
                    <Image Source="nointernet"/>
                    <Label Text="Oops!" VerticalOptions="Center" FontAttributes="Bold" FontSize="Title"
                           HorizontalOptions="Center"/>
                    <Label Text="Your internet might be slow or you've lost your internet connection. Please try again later."
                           VerticalOptions="Center" HorizontalTextAlignment="Center"
                           HorizontalOptions="Center" />
                    <StackLayout Margin="100,40">
                        <Button Text="Try again" Margin="0" CornerRadius="20"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
            
        </StackLayout>
</ContentPage>