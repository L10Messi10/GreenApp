<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenApp.Activity.MarketClosePage" BackgroundColor="{StaticResource Primary}">
    <StackLayout>
        <Frame Padding="0" VerticalOptions="FillAndExpand" BackgroundColor="#FFFFFF"
               Margin="0,-180,0,100" CornerRadius="160" HasShadow="True">
            <StackLayout VerticalOptions="CenterAndExpand" Margin="10,180,10,0">
                <Image Source="marketclosed" HeightRequest="300" Margin="20" WidthRequest="300" Aspect="AspectFit" />
                <Label Text="Market Closed! 😴😴" VerticalOptions="Center" FontAttributes="Bold" FontSize="Title"
                       HorizontalOptions="Center" />
                <Label
                    Text="The market is temporarily closed. We'll be back at our operating hours 5-am to 7-pm!"
                    VerticalOptions="Center" HorizontalTextAlignment="Center"
                    HorizontalOptions="Center" />
                <StackLayout Margin="100,40">
                    <Button Text="Try again" Margin="0" CornerRadius="20" Clicked="Button_OnClicked" />
                </StackLayout>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>